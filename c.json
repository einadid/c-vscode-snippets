},
"Prefix Sum": {
  "prefix": "pref",
  "body": [
    "vector<long long> prefix(${1:n});",
    "prefix[0] = ${2:a}[0];",
    "for (int i = 1; i < ${1:n}; i++) {",
    "    prefix[i] = prefix[i - 1] + ${2:a}[i];",
    "}"
  ]
},
